package com.example.studentCourses.security;

import java.awt.RenderingHints.Key;
import java.sql.Date;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;
import com.example.studentCourses.repository.CoursesRepository;
import io.jsonwebtoken.Claims;
import io.jsonwebtoken.Jws;
import io.jsonwebtoken.Jwts;
import io.jsonwebtoken.SignatureAlgorithm;
import io.jsonwebtoken.security.Keys;

@Component
public class JwtUtil {

    private final CoursesRepository coursesRepository;

	//these values are injected from the application.properties file.
	
	@Value("${jwt.secret}")
	private String jwtSecret;
	
	@Value("${jwt.expirationMs}")
	private long jwtExpirationMs;

    JwtUtil(CoursesRepository coursesRepository) {
        this.coursesRepository = coursesRepository;
    }
	
	// getting the key
	private Key getSigningKey() {
		byte[] keyBytes = jwtSecret.getBytes();
		return (Key) Keys.hmacShaKeyFor(keyBytes);
	}
	
	public String generateToken(String subject,String role) {
		Date now = new Date(jwtExpirationMs);
		Date expiry = new Date(now.getTime()+jwtExpirationMs);
		return Jwts.builder()
				   .setSubject(subject)
				   .claim("role", role)
				   .setIssuedAt(now)
				   .setExpiration(expiry)
				   .signWith((java.security.Key) getSigningKey(), SignatureAlgorithm.HS256)
				   .compact();
	}
	
	public boolean validateToken(String token) {
		try {
			Jws<Claims> jws = Jwts.parserBuilder()
					              .setSigningKey((java.security.Key) getSigningKey())
					              .build()
					              .parseClaimsJws(token);
		}
	}
}
